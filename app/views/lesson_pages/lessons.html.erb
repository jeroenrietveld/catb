<header>
	<h2>Lessons</h2>
</header>

<nav>
	<ul class="chapter-list">
		<% @chapters.each do |c| %>
			<li class="chapter-list-item"><%= link_to c.title, lesson_pages_lessons_path(:chapter => c.id) %></li>		
		<% end %>
	</ul>
</nav>

<section id="content" class="clear">
	<% @chapter.lessons.each do |l| %>
		<div class="lesson">
			<h4><%= l.title %></h4>

			<p>
				<%= raw l.description %>
			</p>
		</div>
	<% end %>
</section>